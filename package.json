{
  "name": "shapeshifter",
  "version": "5.1.0",
  "description": "Generate relational schemas, React prop types, Flow type aliases, or TypeScript interfaces from JSON, JS, or GraphQL schematic files.",
  "keywords": [
    "generate",
    "schema",
    "schematic",
    "react",
    "prop",
    "flow",
    "typescript",
    "type",
    "alias",
    "definitions",
    "interface",
    "struct",
    "shape",
    "shift",
    "shifter",
    "transpile",
    "entity",
    "graphql"
  ],
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "bin": "./bin/shapeshifter.js",
  "scripts": {
    "babel": "beemo typescript --node",
    "build": "yarn run babel && yarn run build:dts",
    "build:dts": "beemo run-script generate-dts",
    "check": "flow check && tsc --noEmit --allowJs ./tests/expected/gql/typescript/* ./tests/expected/node/typescript/*",
    "clean": "rimraf ./{lib,esm}/",
    "coverage": "yarn run jest --coverage",
    "docs": "gitbook build --debug",
    "docs:serve": "gitbook serve",
    "docs:install": "gitbook install",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "package": "yarn run clean && yarn run build && yarn test",
    "prettier": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:webpack": "yarn run babel && webpack --config webpack.config.js",
    "test:webpack:dev": "yarn run babel && webpack-dev-server",
    "posttest": "yarn run eslint",
    "type": "beemo typescript --noEmit",
    "prerelease": "yarn run package",
    "release": "np --yolo --no-yarn"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/shapeshifter.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/shapeshifter/issues"
  },
  "homepage": "https://github.com/milesj/shapeshifter#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "graphql": "^0.13.2",
    "optimal": "^0.18.0",
    "vorpal": "^1.12.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.79.0",
    "@types/graphql": "^0.12.6",
    "babel-loader": "^7.1.4",
    "flow-bin": "^0.68.0",
    "prop-types": "^15.6.1",
    "typescript": "^2.7.2",
    "webpack": "^4.2.0",
    "webpack-dev-server": "^3.1.1"
  },
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "env": {
          "TS_JEST_DEBUG": "true"
        }
      },
      "prettier",
      "typescript"
    ],
    "eslint": {
      "ignore": [
        "tests/expected/**/*",
        "tests/bundle.js"
      ],
      "rules": {
        "function-paren-newline": "off"
      }
    }
  }
}
