{
  "name": "shapeshifter-root",
  "private": true,
  "scripts": {
    "build": "beemo typescript --workspaces=* --priority=core --node",
    "check": "flow check && tsc --noEmit --lib esnext,esnext.asynciterable ./packages/core/tests/expected/graphql/typescript/*.ts ./packages/core/tests/expected/common/typescript/*.ts",
    "coverage": "yarn run jest --coverage",
    "docs": "gitbook build --debug",
    "docs:serve": "gitbook serve",
    "docs:install": "gitbook install",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run eslint && yarn run check",
    "type": "beemo typescript --workspaces=* --noEmit",
    "prerelease": "yarn test && yarn run build",
    "release": "lerna publish"
  },
  "dependencies": {
    "@types/graphql": "^0.13.1",
    "@types/js-yaml": "^3.11.1",
    "@types/webpack": "^4.4.3",
    "graphql": "^0.13.2",
    "js-yaml": "^3.12.0",
    "lerna": "^2.11.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.105.0",
    "webpack": "^4.12.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "eslint": {
      "ignore": [
        "packages/core/tests/expected/**/*",
        "tests/bundle.js"
      ]
    },
    "prettier": {
      "ignore": [
        "package/core/tests/expected/**/*",
        "book.json",
        "lerna.json",
        "package.json"
      ]
    }
  }
}
