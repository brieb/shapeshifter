{
  "name": "shapeshifter-root",
  "private": true,
  "scripts": {
    "build": "beemo typescript --workspaces=* --priority=core --node",
    "check": "flow check && tsc --noEmit --lib esnext,esnext.asynciterable ./tests/expected/graphql/typescript/*.ts ./tests/expected/common/typescript/*.ts",
    "coverage": "yarn run jest --coverage",
    "docs": "gitbook build --debug",
    "docs:serve": "gitbook serve",
    "docs:install": "gitbook install",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:webpack": "webpack",
    "posttest": "yarn run eslint && yarn run check",
    "type": "beemo typescript --workspaces=* --noEmit",
    "prerelease": "yarn test && yarn run build",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.105.0",
    "lerna": "^2.11.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "dependencies": [
          "typescript"
        ]
      },
      "prettier",
      "typescript"
    ],
    "eslint": {
      "ignore": [
        "tests/expected/**/*",
        "tests/bundle.js"
      ]
    },
    "prettier": {
      "ignore": [
        "tests/expected/**/*",
        "book.json",
        "lerna.json",
        "package.json"
      ]
    }
  }
}
