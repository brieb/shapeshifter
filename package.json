{
  "name": "shapeshifter",
  "version": "6.0.0",
  "description": "Generate relational schemas, PropTypes, Flow aliases, and TypeScript interfaces from JSON, JS, or GraphQL schematic files.",
  "keywords": [
    "generate",
    "schema",
    "schematic",
    "react",
    "prop",
    "prop-types",
    "flow",
    "typescript",
    "type",
    "alias",
    "definitions",
    "interface",
    "struct",
    "shape",
    "shift",
    "shifter",
    "transpile",
    "entity",
    "graphql"
  ],
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "bin": "./bin/shapeshifter.js",
  "scripts": {
    "babel": "beemo typescript --node --declaration",
    "build": "yarn run babel",
    "check": "flow check && tsc --noEmit --lib esnext,esnext.asynciterable ./tests/expected/graphql/typescript/*.ts ./tests/expected/common/typescript/*.ts",
    "clean": "rimraf ./{lib,esm}/",
    "coverage": "yarn run jest --coverage",
    "docs": "gitbook build --debug",
    "docs:serve": "gitbook serve",
    "docs:install": "gitbook install",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "package": "yarn run clean && yarn run build && yarn test",
    "prettier": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:webpack": "yarn run build && webpack --config webpack.config.js",
    "test:webpack:dev": "yarn run babel && webpack-dev-server",
    "posttest": "yarn run eslint && yarn run check",
    "type": "beemo typescript --noEmit",
    "prerelease": "yarn run package",
    "release": "np --yolo --no-yarn"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/shapeshifter.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/shapeshifter/issues"
  },
  "homepage": "https://github.com/milesj/shapeshifter#readme",
  "dependencies": {
    "@types/graphql": "^0.13.0",
    "@types/js-yaml": "^3.11.1",
    "@types/webpack": "^4.1.3",
    "@types/yargs": "^11.0.0",
    "graphql": "^0.13.2",
    "js-yaml": "^3.11.0",
    "optimal": "^0.19.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.82.2",
    "flow-bin": "^0.69.0",
    "prop-types": "^15.6.1",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "eslint": {
      "ignore": [
        "tests/expected/**/*",
        "tests/bundle.js"
      ],
      "rules": {
        "function-paren-newline": "off"
      }
    },
    "prettier": {
      "ignore": [
        "book.json",
        "package.json",
        "index.d.ts",
        "tests/expected/**/*"
      ]
    }
  }
}
